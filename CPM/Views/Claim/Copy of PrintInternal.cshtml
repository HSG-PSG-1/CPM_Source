@*No cache headers*@
@{ Response.CacheControl = "no-cache"; }
@{ Response.AddHeader("Pragma", "no-cache"); }
@{ Response.Expires = -1; }
@model CPM.DAL.vw_Claim_Master_User_Loc
@using CPM.DAL
@using CPM.Helper
@{
    List<Comment> comments = (ViewData["comments"] != null) ? (List<Comment>)ViewData["comments"] : null;
    List<FileHeader> filesH = (List<FileHeader>)ViewData["filesH"];
    List<ClaimDetail> items = (List<ClaimDetail>)ViewData["items"];
}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<title>Claim Print - Internal</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <style>
        .spacing { margin: 5px 5px 5px 5px; }
        .spacing td { text-align: center; }
    </style>
</head>
<body style="background-color: #ffffff; margin: 2px 10px 2px 10px;">
    <div style="text-align: right" onclick="window.print();">
        [ <a href="#">Print</a> ]</div>
    <table width="100%">
        <tr>
            <td>
                @*Report Header 1 : START*@
                <table cellpadding="0" cellspacing="0" width="100%">
                    <tr>
                        <td>
                            &nbsp;<img src="@Url.Content("~/Content/Images/AOT Logo.jpg")" alt="We make importing Tires easy!" />
                        </td>
                    </tr>
                    <tr>
                        <td align="center" class="small">
                            <i>We make importing Tires easy!</i><br />
                            &nbsp;
                            <table align="center" cellpadding="0" cellspacing="0" border="0">
                                <tr>
                                    <td nowrap="nowrap" align="center" colspan="3">
                                        Houston, texas U.S.A.
                                    </td>
                                </tr>
                                <tr>
                                    <td nowrap="nowrap">
                                        Tel. 281/600-8473
                                    </td>
                                    <td>
                                        &nbsp;&nbsp;&nbsp;&nbsp;
                                    </td>
                                    <td nowrap="nowrap">
                                        Fax.281/600-8475
                                    </td>
                                </tr>
                                <tr>
                                    <td nowrap="nowrap" align="center" colspan="3">
                                        www.american-omni.com
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
                @*Report Header 1 : END*@
            </td>
            <td width="50%">
            </td>
            <td align="center" nowrap="nowrap" align="right" valign="top">
                @*Report Header 2 : START*@
                <br />
                <b class="PrintHeading">TIRE CLAIM FORM@((_Session.IsInternal) ? " - AOT" : "")</b><br />
                <table align="right">
                    <tr>
                        <td>
                            <table width="90%" class="thinBorder" cellpadding="6" cellspacing="2">
                                <tr>
                                    <td nowrap="nowrap">Claim Date</td>
                                    <td nowrap="nowrap">Customer Ref #</td>
                                    <td nowrap="nowrap">Salesperson</td>
                                    <td nowrap="nowrap">Claim #</td>
                                </tr>
                                <tr>
                                    <td nowrap="nowrap">@Model.ClaimDate.ToString(Defaults.dtFormat, Defaults.ci)</td>
                                    <td nowrap="nowrap">@Model.CustRefNo</td>
                                    <td nowrap="nowrap">@Model.SalespersonName</td>
                                    <td nowrap="nowrap">@Model.ClaimNo</td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
                @*Report Header 2 : END*@
            </td>
        </tr>
    </table>
    <br />
    <table width="100%" cellpadding="2" cellspacing="2">
        <tr>
            <td>
            @* User, Brand : START *@
                <table>
                    <tr>
                        <td width="1%">Customer:</td>
                        <td class="uline" width="28%" style="text-decoration: none" nowrap="nowrap">@Model.CustOrg</td>
                        <td width="40%" align="right">&nbsp;&nbsp;&nbsp;&nbsp;Brand:</td>
                        <td width="37%" class="uline" style="text-decoration: none" nowrap="nowrap">@Model.Brand</td>
                    </tr>
                    <tr>
                <td width="1%" align="right">Location:</td>
                <td class="uline" width="28%" style="text-decoration:none" nowrap="nowrap">@Model.LocationAndCode</td>
                <td width="40%" align="right">&nbsp;&nbsp;&nbsp;&nbsp;Vendor:</td>
                <td width="37%" class="uline" style="text-decoration:none" nowrap="nowrap">@Model.VendorName</td>            
            </tr>
                </table>
           @* User, Brand : END *@
            </td>
        </tr>
        <tr>
            <td>
                @*<div style="text-align: right">Total Items :<%= items.Count.ToString() %></div>*@
                <span class="small">&nbsp;</span>
                @if (items.Count > 0 || true)
                {
                @*Items : START *@
                <table class="thinBorder" width="100%">
                    <thead class="header">
                        <tr class="small">
                            <th width="1%">#</th>
                            <th width="1%">Item</th>
                            <th nowrap="nowrap">SIZE / PLY / DESCRIPTION</th>
                            <th nowrap="nowrap">SERIAL NO.</th>
                            <th>D.O.T. NO.</th>
                            <th nowrap="nowrap" class1="smaller">32NDS<br />REMAINING</th>
                            <th nowrap="nowrap">NATURE OF DEFECT</th>
                            <th nowrap="nowrap">ORIGINAL<br />T.D.(32NDS)</th>
                            <th nowrap="nowrap">REMAINING<br />TREAD %</th>
                            <th nowrap="nowrap">CURRENT<br />PRICE</th>
                            <th nowrap="nowrap">CREDIT<br />AMOUNT</th>
                        </tr>
                    </thead>
                    <tbody align="center">
                        @{int pos = 1;}
                        @foreach (var item in items){
                        <tr>
                            <td rowspan="2">@(pos++)</td>
                            <td nowrap="nowrap">@item.ItemCode</td>
                            <td>&nbsp;@item.Size / @item.Ply / @item.Description</td>
                            <td nowrap="nowrap">@item.Serial</td>
                            <td>@item.DOT</td>
                            <td nowrap="nowrap">@item.TDRemaining.ToString("#0")</td>
                            <td>@item.Defect</td>
                            <td nowrap="nowrap">@item.TDOriginal1.ToString("#0")</td>
                            <td nowrap="nowrap" align="right">@item.RemainingTread1.ToString("#0.00")%</td>
                            <td nowrap="nowrap" align="right">$@item.CurrentPrice.ToString("#0.00")</td>
                            <td nowrap="nowrap" align="right">$@item.CreditAmt1.ToString("#0.00")</td>
                        </tr>
                            <tr>                            
                            <td colspan="10" align="left"><i>&nbsp;<u>Claim Status</u>: @item.Note</i></td>
                            </tr>
                         } 
                    </tbody>
                </table>
                @*Items : END *@
                } 
            </td>
        </tr>
        <tr>
            <td>
                <span class="small">&nbsp;</span>
                @*Report Footer : START*@
                <table width="98%" align="right">
                    <tr>
                        <td width="30%" class="uline">
                            @Model.SalespersonName
                        </td>
                        <td width="1%">
                        </td>
                        <td width="30%" class="uline">
                        </td>
                        <td width="20%">
                        </td>
                        <td width="10%" nowrap="nowrap" align="right">
                            Total
                        </td>
                        <td class="thinBorder" width="7%" align="right">
                            $@items.Where(c=> !c._Deleted).Sum(c => c.CreditAmt1).ToString("#0.00")
                        </td>
                    </tr>
                    <tr>
                        <td class="small">
                            &nbsp;Salesperson
                        </td>
                        <td width="1%">
                        </td>
                        <td class="small">
                            &nbsp;Claim Approved By
                        </td>
                        <td colspan="3">
                            &nbsp;
                        </td>
                    </tr>
                </table>
                @*Report Footer : END*@
            </td>
        </tr>
    </table>
</body>
</html>

